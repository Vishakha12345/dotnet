
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
@Html.ValidationSummary()

<table>
    <tr>
        <td>Email ID</td>
        <td><input type="text" name="username" /></td>
    </tr>

    <tr>
