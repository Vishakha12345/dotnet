<?xml version="1.0"?>
<configuration>

  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  <system.web>
    <compilation debug="true" targetFramework="4.5.1" />
    <httpRuntime targetFramework="4.5.1"/>
  </system.web>
 
  <!--WCF service configuration to be implemented  -->
  <!--Configuration Added By Ravi Tambade --> 
  
  <system.serviceModel>
    <services>
      <service name="PaymentGateway.PaymentService"
               behaviorConfiguration="ServiceBehavior">
      
        <!-- Publish Information about Webservice EndPoints-->
        <endpoint binding="webHttpBinding" 
                  contract="PaymentGateway.IPaymentService" 
                  behaviorConfiguration="web">
        </endpoint>
      </service>
    </services>
    
    <behaviors>
      <serviceBehaviors>
        <behavior name="ServiceBehavior">
          
          <serviceMetadata httpGetEnabled="true" 
                           httpsGetEnabled="true"/>
          
          <serviceDebug 
            includeExceptionDetailInFaults="false"/>
        </behavior>
      </serviceBehaviors>

      <!--EndPoint behaviour -->    
      <endpointBehaviors>
        <behavior name="web">
          <webHttp/>
        </behavior>
      </endpointBehaviors>   
    </behaviors>
    
    <!--Protocol Mapping -->
    <protocolMapping>
        <add binding="basicHttpsBinding"
             scheme="https" />
    </protocolMapping>    
  
    
    <!--Serive Hosting configuration-->
    <serviceHostingEnvironment 
      aspNetCompatibilityEnabled="true" 
      multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
  
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
    <directoryBrowse enabled="true"/>
  </system.webServer>
</configuration>
